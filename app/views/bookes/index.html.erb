<body>
<p id="notice"></p>
<h1>Bookes</h1>
<table>
  <thed>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thed>  
  <tbody>
    <% @bookes.each do |book| %>
      <tr>
        <td><%= book.title%></td>
        <td><%= book.body%></td>
        <td>
          <a><%= link_to "Show" ,"/bookes/#{book.id}"%></a>
        </td>
        <td>
          <a><%= link_to "Edit" ,"/bookes/#{book.id}/edit"%></a>
        </td>
        <td>
          <a><%= link_to "Detroy" ,"/bookes/#{book.id}/destroy", method: :delete , data: {confirm: "Aer you sure?"}%></a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>


<%= form_with model:@book, url:"/bookes/create",local:true do |f| %>
<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>
<div class="action">
  <%= f.submit "Create Book" %>
</div>
<% end %>

</body>


