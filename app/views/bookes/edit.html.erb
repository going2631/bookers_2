<h1>Editing Book</h1>

<%= form_with model:@book, url:"/bookes/:id",local:true do |f| %>
<div class=field>
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class=field>
  <label>Body</label>
  <%= f.text_area :body %>
</div>
<div class=action>
  <%= f.submit "update Book" %>
</div>
<% end %>

<%= link_to "show","/bookes/#{@book.id}" %>
<%= link_to "Back","/bookes" %>